<?xml version="1.0" encoding="utf-8" ?>
<!-- Creates a pop up to tell the user the word is not in the list 
    window instance with the background transparent and allowed to closes when background is clicked-->
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             xmlns:viewmodel="clr-namespace:Treedle.ViewModel"
             xmlns:model="clr-namespace:Treedle.Model"
             x:Class="Treedle.View.NotWordPage"
             x:DataType="viewmodel:GameViewModel"
             BackgroundColor="#80000000"
             CloseWhenBackgroundIsClicked="True">
    
    <!-- Creates Verticla layout to hold all the components -->
    <VerticalStackLayout
        HorizontalOptions="Center">

        <!-- Creates a background for the message -->
        <Frame
            BackgroundColor="White"
            CornerRadius="10">
        <!-- Creates message to display -->
        <Label 
            Text="NOT A WORD"
            FontAttributes="Bold"
            FontSize="20"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        </Frame>
    </VerticalStackLayout>
</mopups:PopupPage>